@model IEnumerable<WebBatDongSan_ver2.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Quản lý Quyền Truy Cập</h1>

<p>
    <a style="float:right" asp-area="Admin" asp-controller="Roles" asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-active">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Descript</th>
            <th>#</th>

        </tr>
    </thead>

    <tbody>

        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.RoleId</td>
                    <td>@item.RoleName</td>
                    <td>@item.RoleDesc</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Roles" asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-success">View</a>
                        <a asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-primary">Edit</a>
                        <a asp-area="Admin" asp-controller="Roles" asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }
        }

    </tbody>
</table>